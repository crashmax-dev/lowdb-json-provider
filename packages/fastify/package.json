{
  "name": "@stenodb/fastify",
  "version": "4.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "pnpm build --watch src",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean"
  },
  "dependencies": {
    "@stenodb/node": "workspace:4.0.0",
    "@stenodb/utils": "workspace:4.0.0",
    "class-validator-jsonschema": "5.0.0",
    "fastify-plugin": "4.5.0"
  },
  "devDependencies": {
    "@types/node": "18.11.19",
    "fastify": "^4.13.0"
  },
  "peerDependencies": {
    "@stenodb/node": "workspace:4.0.0",
    "fastify": "^4.0.0"
  },
  "ava": {
    "snapshotDir": "test/snapshots",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  },
  "engines": {
    "node": ">=14.16"
  }
}
